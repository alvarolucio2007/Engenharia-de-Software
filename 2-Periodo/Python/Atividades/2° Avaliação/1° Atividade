#Soma de 1 a N
def progression_sum(n):
    return (n/2)*(1+n)
#Contagem Regressiva
def countdown(limit):
    for i in range(limit,0,-1):
        print(i)
#Fatorial
def factorial_fuction(n):
    mult=1
    for i in range(1,n+1):
        mult*=i
    return mult

print(factorial_fuction(6))

#Quantidade de dígitos
def digit_quantity(n):
    return len(str(n))

#Números Primos
from math import factorial
def is_prime_fancy(n):
    return (factorial(n-1)+1)%n==0
#OU
def is_prime_normal(n):
    return len([d for d in range(1,n+1) if n%d==0])==2
print(is_prime_normal(11))
#Sequencia de Fibonacci

from math import sqrt
def fib(n): #Fórmula de Binet
    sqrt5=sqrt(5)
    phi=(1+sqrt5)/2
    psi=(1-sqrt5)/2
    fib_array=[]
    for i in range(n):
        fib_array.append(round((1/sqrt5)*(((phi)**i)-(psi**i))))
    return fib_array

#Números Perfeitos
def is_perfect(n):
    return (sum(d for d in range(1,n) if n%d==0)==n)

